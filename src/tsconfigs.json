{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "lib": [ "es6", "dom" ],
    "mapRoot": "./",
    "outDir": "../dist/out-tsc",
    "typeRoots": [
      "../node_modules/@types",
      "../typings/index"
    ]
  }
}

